<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cuenta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nfb.exempleyoutube.Cuenta"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/common_google_signin_btn_text_dark_default">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="114dp"
        app:srcCompat="@drawable/usergris"
        android:id="@+id/imgPerfil" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp">

        <TextView
            android:text="Nombre:"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Nombre"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNombre" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:text="Nick:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Nick"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNick" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Email"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editEmail" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:text="Contraseña Nueva:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CNueva"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editCNueva" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:text="Contraseña antigua:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CAntigua"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editCAntigua" />

    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Aceptar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnAceptar"
            android:layout_weight="1"
            android:width="1dp"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:textSize="18sp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>
